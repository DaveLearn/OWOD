    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch T1 Val",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/train_net.py",
            "args": [
                "--num-gpus", "1",
                "--dist-url='tcp://127.0.0.1:52133'",
                "--config-file", "./configs/OWOD/t1/t1_val.yaml",
                "SOLVER.IMS_PER_BATCH","4",
                "SOLVER.BASE_LR", "0.01",
                "OWOD.TEMPERATURE", "1.5",
                "OUTPUT_DIR", "./output/t1_final"
            ],
            "env": {
                "CUDA_LAUNCH_BLOCKING": "1"
            }
        }
    ]
}