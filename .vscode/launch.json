{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch T1 Train Fast",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/train_net.py",
            "args": [
                "--num-gpus", "1",
                "--dist-url='tcp://127.0.0.1:52133'",
                "--config-file", "./configs/OWOD/t1/t1_train_fast.yaml",
                "OUTPUT_DIR", "./output/debug/t1"
            ],
            "env": {
                "CUDA_LAUNCH_BLOCKING": "1",
                "CUDA_HOME": "~/",
                "PYTHONOPTIMIZE": "TRUE"
            }
        },
        {
            "name": "Launch T1 Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/train_net.py",
            "justMyCode": false,
            "args": [
                "--num-gpus", "1",
                "--eval-only",
                "--config-file", "./configs/OWOD/t1/t1_test.yaml",
                "SOLVER.IMS_PER_BATCH","8",
                "SOLVER.BASE_LR", "0.005",
                "OUTPUT_DIR", "./output/t1_final",
                "MODEL.WEIGHTS", "./output/t1/model_final.pth"
            ],
            "env": {
                "CUDA_LAUNCH_BLOCKING": "1",
                "CUDA_HOME": "~/",
                "PYTHONOPTIMIZE": "TRUE"
            }
        }
    ]
}